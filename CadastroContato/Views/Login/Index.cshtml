@model LoginModel

@{
    Layout = "_LayoutOff";
    ViewData["Title"] = "Login";
}
@if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert1" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
@if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert1" role="alert">
             <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemSucesso"]
        </div>
    }

<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-cover.jpg'); background-position: top;">
      <span class="mask bg-gradient-dark opacity-6"></span>      
    </div>
    <div class="container">
      <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4">
              <h5>Sistema de Clientes </h5>
            </div>            
            <div class="card-body">
              <form role="form" asp-controller="Login" asp-action="Entrar" method="post">
                <div class="mb-3">
                  <input type="text" class="form-control" placeholder="Login" aria-label="Login" asp-for="Login">
                  @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="mb-3">
                  <input type="password" class="form-control" id="senha" asp-for="Senha">
                  @Html.ValidationMessageFor(x => x.Senha)
                </div>                
                <div class="text-center">
                  <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Entrar</button>
                </div>     
                <div>
                     <a asp-action="RedefinirSenha" asp-controller="Login">Redefinir Minha Senha</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
