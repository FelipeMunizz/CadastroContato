@model RedefinirSenhaModel

@{
    Layout = "_LayoutOff";
    ViewData["Title"] = "Redefinir Senha";
}
@if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert1" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }

<div class="container d-flex justify-content-center">
<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input type="text" class="form-control" id="login" asp-for="Login">    
    @Html.ValidationMessageFor(x => x.Login)
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" asp-for="Email">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <button type="submit" class="btn btn-primary">Redefinir</button>
  <a role="button" class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
</form>
</div>