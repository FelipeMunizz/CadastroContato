@using CadastroContato.Enum
@model ContatoModel
@{
    ViewData["Title"] = "Editar Clientes";
}
    
<div class="container text-center">
<h1 class="display-4">Editar Clientes</h1>
</div>

<div class="container">
    
    <form asp-controller="Contato" asp-action="Alterar" method="post">

        <input type="hidden" asp-for="Id"/>

  <div class="mb-3">
    <label for="nome" class="">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" id="" aria-describedby="Nome" placeholder="Digite o nome">    
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="mb-3">
    <label for="email" class="">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" id="" aria-describedby="E-mail" placeholder="Digite o E-mail">    
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="mb-3">
    <label for="celular" class="">Celular</label>
    <input type="text" asp-for="Celular" class="form-control" id="" aria-describedby="Celular" placeholder="Digite o Celular">    
    @Html.ValidationMessageFor(x => x.Celular)
  </div>

  <div class="mb-3">
    <label for="Servico" class="">Serviço</label>
    <input type="text" asp-for="Servico" class="form-control" id="" aria-describedby="Serviço" placeholder="Serviço">    
    @Html.ValidationMessageFor(x => x.Servico)
  </div>
    <br/>
  <div class="mb-3">    
    <select asp-for="Status" class="form-control">
        <option value="0">Selecione</option>
        <option value="@StatusEnum.Orcamento">Orçamento</option>
        <option value="@StatusEnum.Executando">Executando</option>
        <option value="@StatusEnum.Concluido">Concluído</option>        
    </select>
    @Html.ValidationMessageFor(x => x.Status)
  </div>
  
  <button type="submit" class="btn btn-primary">Alterar</button>
  <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>

</form>
</div>